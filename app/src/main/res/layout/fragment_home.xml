<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/thumbnail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/circle_shape"
                android:scaleType="centerCrop">

                <TextView
                    android:id="@+id/thumb_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="M"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/thumbnail">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/tts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:padding="10dp"
                    android:text="{fa-volume-up}"
                    android:textColor="@color/parrot"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/fuel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/fuel"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/tts"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/parking"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/parking_sign"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/fuel"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/first_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/app_name"
                        android:textColor="#222"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/first_line"
                        android:text="@string/app_name"
                        android:textColor="#222"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/ac_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/speed"
                        android:text="@string/app_name"
                        android:textColor="#222"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/status_since"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/ac_status"
                        android:text="@string/app_name"
                        android:textColor="#222"
                        android:textSize="13dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/status_since"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="#222"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:id="@+id/battery_signal_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/address"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.joanzapata.iconify.widget.IconTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:padding="2dp"
                            android:text="{fa-battery-full}"
                            android:textColor="@color/parrot"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/battery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#222"
                            android:textSize="13sp" />

                        <com.joanzapata.iconify.widget.IconTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:padding="2dp"
                            android:text="{fa-signal}"
                            android:textColor="@color/parrot"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/signal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#222"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/second_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/battery_signal_layout"
                        android:text="@string/app_name"
                        android:textColor="#666"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/driver_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/second_line"
                        android:text="@string/app_name"
                        android:textColor="#666"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/driver_name"
                        android:text="@string/app_name"
                        android:textColor="#666"
                        android:textSize="11dp" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/content"
            android:layout_marginTop="5dp"
            android:background="@color/grey"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center">


            <RelativeLayout
                android:id="@+id/map_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/map_button_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:text="{fa-map-marker}"
                    android:textColor="@color/parrot"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/map_button_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/map_button_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="Live"
                    android:textColor="@color/parrot" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/history_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:text="{fa-history}"
                    android:textColor="@color/purpler"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/history"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="History"
                    android:textColor="@color/purpler" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ignition_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/ignition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:text="{fa-power-off}"
                    android:textColor="@color/brown"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ignition"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="Ignition"
                    android:textColor="@color/brown" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/call_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:text="{fa-phone}"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/call"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="Call Driver"
                    android:textColor="@color/blue" />

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>